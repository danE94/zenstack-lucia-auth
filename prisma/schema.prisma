datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

/// @@allow('create', true)
/// @@allow('all', auth() == this)
model User {
    id String @id() @default(cuid())
    /// @email
    email String @unique()
    /// @omit
    /// @length(8, 16)
    hashedPassword String
    session Session[]
    post Post[]
}

model Session {
    id String @id()
    userId String
    expiresAt DateTime
    user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

/// @@allow('read', auth().id == userId)
model Post {
    id String @id() @default(cuid())
    title String
    content String
    userId String
    user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}